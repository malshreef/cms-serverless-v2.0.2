# S7ABT Frontend Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# API Configuration
NEXT_PUBLIC_API_URL=https://<your-api-id>.execute-api.<region>.amazonaws.com/Stage
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# MailerLite API (for newsletter/contact form)
MAILERLITE_API_KEY=<your-mailerlite-api-key>

# AWS SES Configuration (for contact form email notifications)
AWS_REGION=<your-aws-region>
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>

# Contact Form Settings (comma-separated list for multiple recipients)
CONTACT_NOTIFICATION_EMAILS=admin@your-domain.com
CONTACT_FROM_EMAIL=noreply@your-domain.com
